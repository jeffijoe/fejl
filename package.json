{
  "name": "fejl",
  "version": "0.0.0-development",
  "description": "Error-making utility for JavaScript apps.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js",
      "require": "./lib/index.js"
    }
  },
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.build.json && rollup -c",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "check": "tsc -p tsconfig.json --noEmit --pretty",
    "lint": "npm run check && eslint --fix \"src/**/*.ts\" && prettier --write \"src/**/*.{ts,js}\"",
    "cover": "jest --coverage",
    "precommit": "lint-staged && npm test",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffijoe/fejl.git"
  },
  "files": [
    "lib",
    "LICENSE.md",
    "README.md"
  ],
  "directories": {
    "lib": "lib"
  },
  "keywords": [],
  "author": "Jeff Hansen <jeff@jeffijoe.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeffijoe/fejl/issues"
  },
  "homepage": "https://github.com/jeffijoe/fejl#readme",
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@semantic-release/condition-codeship": "^1.1.0",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/rimraf": "^4.0.5",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "semantic-release": "^24.2.1",
    "semantic-release-conventional-commits": "^3.0.0",
    "smid": "^0.1.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePaths": [
      "src"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "transform": {
      "\\.(ts|tsx)": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {}
  },
  "release": {
    "generateNotes": "@semantic-release/release-notes-generator",
    "analyzeCommits": {
      "path": "semantic-release-conventional-commits",
      "majorTypes": [
        "major",
        "breaking"
      ],
      "minorTypes": [
        "feat",
        "minor"
      ],
      "patchTypes": [
        "chore",
        "fix",
        "patch",
        "docs",
        "test",
        "style",
        "refactor"
      ],
      "mergePattern": "/^Merge pull request #(\\d+) from (.*)$/",
      "mergeCorrespondence": "['id', 'source']"
    }
  }
}
